<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewAppelUrgence"
        android:layout_width="367dp"
        android:layout_height="54dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="#B22222"
        android:paddingTop="8dp"
        android:text="Appels D'Urgence"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints"
        />

    <Button
        android:id="@+id/Samu"
        android:layout_width="100dp"
        android:layout_height="105dp"
        android:layout_marginBottom="8dp"
        android:alpha="0.700"
        android:background="#77B5FE"
        android:text="15"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toTopOf="@+id/textSamu"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="44dp" />

    <TextView
        android:id="@+id/textSamu"
        android:layout_width="139dp"
        android:layout_height="42dp"
        android:layout_marginBottom="16dp"
        android:text="Samu"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonPompiers"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="28dp" />

    <Button
        android:id="@+id/Police"
        android:layout_width="100dp"
        android:layout_height="105dp"
        android:layout_marginBottom="8dp"
        android:alpha="0.700"
        android:background="#BA55D3"
        android:text="17"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toTopOf="@+id/textPolice"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="237dp" />

    <TextView
        android:id="@+id/textPolice"
        android:layout_width="139dp"
        android:layout_height="42dp"
        android:text="Police"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="218dp"
        tools:layout_editor_absoluteY="214dp"
        tools:ignore="MissingConstraints"
        />


    <Button
        android:id="@+id/buttonPompiers"
        android:layout_width="100dp"
        android:layout_height="105dp"
        android:alpha="0.700"
        android:background="#E9383F"
        android:text="18"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="278dp" />

    <TextView
        android:id="@+id/textViewPompiers"
        android:layout_width="139dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:text="Pompier"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/buttonPompiers"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="28dp" />


    <Button
        android:id="@+id/buttonUrgence"
        android:layout_width="100dp"
        android:layout_height="105dp"
        android:layout_marginTop="20dp"
        android:alpha="0.700"
        android:background="#9ACD32"
        android:text="112"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintTop_toBottomOf="@+id/textPolice"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="237dp" />

    <TextView
        android:id="@+id/textViewUrgence"
        android:layout_width="139dp"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        android:text="Urgence"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/buttonUrgence"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="218dp" />


</android.support.constraint.ConstraintLayout>