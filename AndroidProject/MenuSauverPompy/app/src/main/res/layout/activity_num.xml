<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewAppelUrgence"
        android:layout_width="367dp"
        android:layout_height="54dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="#B22222"
        android:paddingTop="8dp"
        android:text="Appels D'Urgence"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <Button
        android:id="@+id/Samu"
        android:layout_width="100dp"
        android:layout_height="105dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="109dp"
        android:alpha="0.700"
        android:background="#77B5FE"
        android:text="15"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toTopOf="@+id/textSamu" />

    <TextView
        android:id="@+id/textSamu"
        android:layout_width="139dp"
        android:layout_height="42dp"
        android:layout_alignStart="@+id/textViewPompiers"
        android:layout_alignLeft="@+id/textViewPompiers"
        android:layout_alignTop="@+id/textPolice"
        android:text="Samu"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonPompiers" />

    <Button
        android:id="@+id/Police"
        android:layout_width="100dp"
        android:layout_height="105dp"
        android:layout_alignStart="@+id/buttonUrgence"
        android:layout_alignLeft="@+id/buttonUrgence"
        android:layout_alignTop="@+id/Samu"
        android:alpha="0.700"
        android:background="#BA55D3"
        android:text="17"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toTopOf="@+id/textPolice" />

    <TextView
        android:id="@+id/textPolice"
        android:layout_width="139dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textViewUrgence"
        android:layout_alignLeft="@+id/textViewUrgence"
        android:layout_marginTop="223dp"
        android:text="Police"

        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textStyle="bold" />


    <Button
        android:id="@+id/buttonPompiers"
        android:layout_width="100dp"
        android:layout_height="105dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/Samu"
        android:layout_alignLeft="@+id/Samu"
        android:layout_marginBottom="160dp"
        android:alpha="0.700"
        android:background="#E9383F"
        android:text="18"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/textViewPompiers"
        android:layout_width="139dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/textViewUrgence"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:text="Pompier"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/buttonPompiers" />


    <Button
        android:id="@+id/buttonUrgence"
        android:layout_width="100dp"
        android:layout_height="105dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/buttonPompiers"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:alpha="0.700"
        android:background="#9ACD32"
        android:text="112"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintTop_toBottomOf="@+id/textPolice" />

    <TextView
        android:id="@+id/textViewUrgence"
        android:layout_width="139dp"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="105dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="36dp"
        android:text="Urgence"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/buttonUrgence" />


</RelativeLayout>